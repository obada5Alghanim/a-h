<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Reading_speed_test_fragment">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="589dp"
        android:layout_below="@+id/Linear1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="188dp"
        android:background="@drawable/text_background"
        android:fontFamily="@font/inter_bold"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp"
        android:text="@string/lorem_ipsum"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="142dp"
        android:fontFamily="@font/inter"
        android:text="اختبار السرعة "
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="389dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/frame_2"
        android:onClick="Click"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/arrow_down" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:layout_marginBottom="802dp"
            android:fontFamily="@font/inter_bold"
            android:foregroundGravity="bottom"
            android:gravity="center"
            android:text="اختر موضوع"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginRight="20dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/start_btn"
        android:layout_width="115dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="99dp"
        android:backgroundTint="#009318"
        android:text="ابدأ"
        app:cornerRadius="30dp"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1dp"
        android:textSize="20dp"
        android:fontFamily="@font/inter_bold"
        android:onClick="start"/>

    <Button
        android:id="@+id/end_btn"
        android:layout_width="115dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="98dp"
        android:backgroundTint="#BD0E0E"
        android:fontFamily="@font/inter_bold"
        android:onClick="end"
        android:text="انهاء"
        android:textSize="20dp"
        app:cornerRadius="30dp"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/timerText"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="112dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

</RelativeLayout>