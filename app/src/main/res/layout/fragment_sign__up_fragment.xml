<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/ID_singUp_fragment"
    tools:context=".Sign_Up_fragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/frame_1"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="right"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Edt_signUp_firstName"
                    android:layout_width="149dp"
                    android:layout_height="50dp"
                    android:background="@drawable/frame_1"
                    android:drawablePadding="10dp"
                    android:hint="First name"
                    android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
                    android:padding="10dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Edt_signUp_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/frame_1"
                    android:drawablePadding="10dp"
                    android:hint="Last name"
                    android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
                    android:padding="10dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <EditText
                android:id="@+id/Edt_signUP_UserName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/frame_1"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="10dp"
                android:hint="User name"
                android:padding="10sp"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/Edt_signUP_gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/frame_1"
                android:drawableLeft="@drawable/gender"
                android:drawableRight="@drawable/sharp_keyboard_arrow_down_24"
                android:drawablePadding="10dp"
                android:hint="Gender"
                android:padding="10sp"
                android:textColor="@color/black" />




            <!--layout for Date of Birth-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/DOB1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/frame_1"
                    android:drawablePadding="10dp"
                    android:hint="Day"
                    android:drawableRight="@drawable/sharp_keyboard_arrow_down_24"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    tools:ignore="TouchTargetSizeCheck"/>

                <EditText
                    android:id="@+id/DOB2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/frame_1"
                    android:drawablePadding="10dp"
                    android:hint="Month"
                    android:drawableRight="@drawable/sharp_keyboard_arrow_down_24"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    tools:ignore="TouchTargetSizeCheck"/>

                <EditText
                    android:id="@+id/DOB3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/frame_1"
                    android:drawablePadding="10dp"
                    android:hint="Year"
                    android:drawableRight="@drawable/sharp_keyboard_arrow_down_24"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    tools:ignore="TouchTargetSizeCheck"/>

            </LinearLayout>

            <EditText
                android:id="@+id/Edt_signUp_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/frame_1"
                android:drawableLeft="@drawable/outline_lock_24"
                android:drawableRight="@drawable/hide"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:longClickable="false"
                android:padding="10dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/frame_1"
                android:drawableLeft="@drawable/outline_lock_24"
                android:drawableRight="@drawable/hide"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:longClickable="false"
                android:padding="10dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/signUp_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/gray"
                android:text="Sign Up"
                android:textSize="22sp"
                app:cornerRadius="35dp"
                android:onClick="sign_up"/>

            <LinearLayout
                android:id="@+id/signUp_to_singIn_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have an account?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/signUP_to_sing_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="Sign In"
                    android:textColor="@color/blue"
                    android:textStyle="italic" />


            </LinearLayout>








        </LinearLayout>






    </androidx.cardview.widget.CardView>



</RelativeLayout>