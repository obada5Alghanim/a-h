<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="130dp"
    tools:context=".choose_book_Q1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="اختر لي كتاب"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="26dp"
        android:text="السؤال(1)"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        tools:ignore="TextSizeCheck,TextSizeCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="ما هو التصنيف الذي تود أن تقرأه ؟"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/answar1_1"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#D6D6D6"
                android:text="روايات"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:strokeColor="#00A4A4"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/answar1_2"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#D6D6D6"
                android:text="أدب"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:strokeColor="#00A4A4"
                app:strokeWidth="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/answar1_3"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#D6D6D6"
                android:text="دين"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:strokeColor="#00A4A4"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/answar1_4"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#D6D6D6"
                android:text="علم النفس"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:strokeColor="#00A4A4"
                app:strokeWidth="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/answar1_5"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#D6D6D6"
                android:text="تاريخ"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:strokeColor="#00A4A4"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/answar1_6"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#D6D6D6"
                android:text="تكنولوجيا"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:strokeColor="#00A4A4"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/next_Q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/left_right_btn_choose_book"
        android:drawableRight="@drawable/right_btn_choose_book"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="  السؤال التالي"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
