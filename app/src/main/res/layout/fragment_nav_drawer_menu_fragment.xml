<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#80000000"
    android:id="@+id/navDrawerMenu"
    android:layoutDirection="rtl">

    <LinearLayout
        android:id="@+id/navDrawerMenu2"
        android:layout_width="261dp"
        android:layout_height="match_parent"
        android:background="@drawable/shadow2"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="16dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/userNameTextViewInMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="اسم المستخدم"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="256dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/linearLayoutForMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myLib1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/mylibraryicona2"
                android:drawablePadding="5dp"
                android:padding="15dp"
                android:text="مكتبتي"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutForMenu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chooes_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/choose_book"
                android:drawablePadding="5dp"
                android:padding="15dp"
                android:text="اختر لي كتاب"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutForMenu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/speedTestID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/reading_speed_test"
                android:drawablePadding="5dp"
                android:padding="15dp"
                android:text="اختبار السرعة"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutForMenu5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/READINGTABLE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/reading_table"
                android:drawablePadding="5dp"
                android:padding="15dp"
                android:text="جدول القراءة"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutForMenu6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/personal_analaysis_test"
                android:drawablePadding="5dp"
                android:padding="15dp"
                android:text="تحليل الشخصية"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutForMenu7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/settingTextClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/nav_drawer_setteing_menu"
                android:drawablePadding="5dp"
                android:padding="15dp"
                android:text="الإعدادات"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutForMenu8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/logOutID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="36dp"
                android:drawableRight="@drawable/logout"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:text="تسجيل الخروج"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/are_you_sure_logout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow_to_gender_fragment"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="285dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/rst_popup"
            android:text="" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="94dp"
            android:layout_marginTop="317dp"
            android:layout_marginEnd="98dp"
            android:text="تسجيل الخروج من حسابك؟"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/logout_btn"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="364dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="#E1DFDF"
            android:text="تسجيل الخروج"
            android:textColor="#D50000"
            android:textSize="18dp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="0.1dp" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="80dp"
            android:backgroundTint="#E1DFDF"
            android:text="الغاء"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="0.1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remove_menu"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="261dp" />

</RelativeLayout>


