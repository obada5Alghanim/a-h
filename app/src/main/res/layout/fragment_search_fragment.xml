<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/searchRealativelayoutID"
    android:layout_marginBottom="75dp"
    tools:context=".search_fragment"
    android:background="@drawable/shadow_background">


  <TextView
      android:id="@+id/textView3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="البحث"
      android:textColor="@color/white"
      android:textSize="26sp"
      android:textStyle="bold"
     />

  <!-- RecyclerView for Search Results -->

  <EditText
      android:id="@+id/editText_search"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/textView3"
      android:layout_alignParentEnd="true"
      android:layout_marginHorizontal="16dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="11dp"
      android:background="@drawable/search_background"
      android:drawableRight="@drawable/mi_search"
      android:drawablePadding="3dp"
      android:hint="ابحث عن كتاب ..."
      android:singleLine="true"
      android:imeOptions="actionDone"
      android:padding="16dp" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView_search_results"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/editText_search"
      android:layout_alignParentBottom="true"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="322dp"
      android:padding="16dp" />


</RelativeLayout>